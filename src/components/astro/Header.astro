<header class="flex-none bg-black/40 backdrop-blur-md border-b border-white/10 z-50">
  <div class="flex h-14">
    <!-- Logo Section -->
    <div class="w-64 flex-none flex items-center px-6 border-r border-white/10 bg-black/20">
      <div class="w-3 h-3 bg-cyan-500 rounded-sm mr-3 animate-pulse shadow-[0_0_10px_#06b6d4]"></div>
      <h1 class="text-2xl font-black tracking-widest text-gray-100">StackNews</h1>
    </div>

    <!-- Ticker Slot (React Island) -->
    <div class="flex-1 flex items-center overflow-hidden relative">
      <slot name="ticker" />
    </div>

    <!-- Clock Section (React Island) -->
    <div class="w-48 flex-none flex items-center justify-end px-6 gap-4 border-l border-white/10 bg-black/20 text-sm font-medium tracking-tight">
      <slot name="clock" />
      <span class="w-2 h-2 rounded-full bg-green-500 shadow-[0_0_8px_#22c55e]"></span>
    </div>
  </div>
</header>
