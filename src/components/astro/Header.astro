// Static header component - HUD-style cyber terminal aesthetic
---

<header class="flex-none glass-panel z-50 relative">
  <!-- Top scan line accent -->
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-cyan-500/50 to-transparent"></div>

  <div class="flex h-14">
    <!-- Logo Section -->
    <div class="w-56 md:w-64 flex-none flex items-center px-4 md:px-6 border-r border-white/10 bg-black/30 relative">
      <!-- HUD corner brackets -->
      <div class="absolute top-1 left-1 w-2 h-2 border-l border-t border-cyan-500/40"></div>
      <div class="absolute bottom-1 left-1 w-2 h-2 border-l border-b border-cyan-500/40"></div>

      <!-- Status indicator -->
      <div class="status-light status-light-sync mr-3 shrink-0"></div>

      <!-- Brand -->
      <h1 class="font-display text-2xl md:text-3xl tracking-[0.15em] text-gray-100 text-glow-sm" style="color: var(--color-cyan-bright);">
        STACK<span class="text-white/80">NEWS</span>
      </h1>
    </div>

    <!-- Ticker Slot (React Island) -->
    <div class="flex-1 flex items-center overflow-hidden relative">
      <!-- Fade edges for ticker -->
      <div class="absolute left-0 top-0 bottom-0 w-8 z-10 bg-gradient-to-r from-[var(--color-glass)] to-transparent pointer-events-none"></div>
      <div class="absolute right-0 top-0 bottom-0 w-8 z-10 bg-gradient-to-l from-[var(--color-glass)] to-transparent pointer-events-none"></div>
      <slot name="ticker" />
    </div>

    <!-- Clock Section (React Island) -->
    <div class="w-40 md:w-48 flex-none flex items-center justify-end px-4 md:px-6 gap-3 border-l border-white/10 bg-black/30 relative">
      <!-- HUD corner brackets -->
      <div class="absolute top-1 right-1 w-2 h-2 border-r border-t border-cyan-500/40"></div>
      <div class="absolute bottom-1 right-1 w-2 h-2 border-r border-b border-cyan-500/40"></div>

      <slot name="clock" />

      <!-- Live indicator -->
      <div class="flex items-center gap-2">
        <span class="text-[9px] font-bold tracking-widest text-green-500/80 hidden md:block">LIVE</span>
        <div class="status-light status-light-online"></div>
      </div>
    </div>
  </div>

  <!-- Bottom border glow -->
  <div class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-cyan-500/30 to-transparent"></div>
</header>
